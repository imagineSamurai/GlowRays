{
  "name": "glowrays",
  "displayName": "GlowRays",
  "description": "Makes text in the editor glow with the same color as the word itself",
  "version": "0.0.1",
  "publisher": "ImagineSamurai",
  "license": "MIT",
  "icon": "icon.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagineSamurai/VSC-glow-Archive.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeGlow.toggle",
        "title": "Toggle GlowRays Effect"
      }
    ],
    "configuration": {
      "title": "GlowRays",
      "properties": {
        "vscodeGlow.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the glow effect"
        },
        "vscodeGlow.intensity": {
          "type": "number",
          "default": 5,
          "description": "Intensity of the glow effect (1-10)"
        },
        "vscodeGlow.includeLanguages": {
          "type": "array",
          "default": ["*"],
          "description": "Languages to include for glow effect"
        },
        "vscodeGlow.excludeLanguages": {
          "type": "array",
          "default": [],
          "description": "Languages to exclude from glow effect"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "typescript": "^5.0.4"
  }
} 